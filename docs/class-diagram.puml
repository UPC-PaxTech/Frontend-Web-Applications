  package "models" {
    entity Review {
      - id: number
      - author: string
      - rating: number
      - text: string
      - read: boolean
    }

    entity Salon {
      - salonId: string
      - location: string
      - imageURL: string
      - phone: number
      - name: string
    }

    entity Staff {
      ' atributos por definir
    }

    entity Worker {
      - id: number
      - nombre: string
      - especializacion: string
      - foto: string
    }

    entity Appointment {
      - reservationId: string
      - tipo: string
      - clientName: string
      - salonName: string
      - paymentStatus: boolean
